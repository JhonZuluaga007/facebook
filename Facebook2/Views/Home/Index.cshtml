@using Microsoft.AspNet.Identity

@Html.AntiForgeryToken()

<!DOCTYPE html>
<html ng-app="compartidos">
<head>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.4.5/angular.min.js"></script>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/app.js" type="text/javascript"></script>
    <script src="~/Scripts/ComentariosAngular.js" type="text/javascript"></script>
</head>
<body ng-app="compartidos" background="http://k33.kn3.net/6/D/2/4/F/1/DF6.jpg">
    <div class="container" ng-controller="CompartirController">
        <div class="row">
            <div class="col-md-3">
                <div class="tamaño-encabezado">
                    <img class="img-responsive" src="" />
                    <div class="tamaño-profile">
                        <img class="img-responsive" src="" />
                    </div>
                </div>
                <div class="color-divs">
                    <h4 class="ppal">@Html.ActionLink(User.Identity.GetUserName(), "Manage")</h4>
                </div>
            </div>
            <div class="col-md-6">
                <div class="panel panel-primary" style="background-image:url('http://www.losandes.com.ar/files/image/2016/01/23/1016534.jpg')">
                    <div class="panel-heading">
                        <span class="glyphicon glyphicon-comment" style="color:white"></span> Publicar
                    </div>
                    <div class="panel-body">
                        <div class="input-group" style="left:80px">
                            <div class="form-group">
                                <input id="btn-input" type="hidden" ng-init="com= '@User.Identity.GetUserName()'" ng-model="com" enter="enter()">
                                <span style="font-size:150%;color:aliceblue ;" class="glyphicon glyphicon-globe"></span>
                                <input id="btn-input" type="text" class="form-control " placeholder="Que estas pensando" ng-model="publicacion" enter="enter()">
                            </div>
                            <div class="form-group">
                                <span style="font-size:150% ;color:aliceblue" class="glyphicon glyphicon-picture"></span>
                                <input id="btn-input" type="text" class="form-control " placeholder="comparte una url de una imagen" ng-model="imagen" enter="enter()">
                            </div>
                            <div class="form-group">
                                <span style="font-size:150% ;color:aliceblue" class="glyphicon glyphicon-facetime-video"></span>
                                <input id="btn-input" type="text" class="form-control" placeholder="comparte una url de un  video" ng-model="video" enter="enter()">
                            </div>
                            <span class="input-group-btn" style="left:-90px;top:40px">
                                <button class="btn btn-warning btn-sm" id="btn-chat" ng-click="enter()">
                                    Publicar
                                </button>
                            </span>
                            <br />
                        </div>
                    </div>
                    <div class="panel-footer" style="background-color:white">
                        <div class="chat">
                            <div class="right clearfix" ng-repeat="msg in compartidoss">
                                <div class="panel" style="background-color:gainsboro">
                                    <p> <input type="hidden" ng-init="id =msg.text[0]" ng-model="id" comentar="comentar()"> </p>
                                    <font color="black"><strong>{{msg.text[1]}}</strong></font><!--usuario-->
                                    <br />
                                    <div ng-if="msg.text[2]!=null">
                                        <img src="{{msg.text[2]}}" width="50" height="50" />
                                    </div>
                                    <div ng-if="msg.text[3]!=null">
                                    </div>
                                    <font style="left:80px">{{msg.text[3]}}</font>  <!--comentario-->
                                    <div ng-if="msg.text[4]!=null">
                                        <center>
                                            <img src="{{msg.text[4]}} " width="450" height="300" />
                                        </center>
                                    </div>
                                    <div ng-if="msg.text[5]!=null">
                                        <font color="blue">compartio un video</font>
                                        <a href="{{msg.text[5]}}" target="_blank"><button class="btn btn-warning btn-sm"> <span class="glyphicon glyphicon-fast-forward"></span></button></a>
                                    </div>
                                    <!--//comentar____________________________________-->
                                    <div class="panel-body" ng-controller="CompartirController">
                                        <button ng-click="comentarios()" ng-hide="visible" class="btn btn-warning btn-sm" style="background-color:olive ; left:-90px;top:0px"><span class="glyphicon glyphicon-th">comentarios {{msg.text[6]}} </span></button>
                                        <input type="hidden" ng-init="publicacion= msg.text[0]" ng-model="publicacion" Like="Likes()">
                                        <button ng-click="Likes()" class="btn btn-warning btn-sm" style="background-color:olive ; left:-90px;top:0px"><span class="glyphicon glyphicon-thumbs-up"> Like {{msg.text[7]}} </span></button>
                                        <div class="input-group" ng-show="visible">
                                            <div class="panel-body" style="background-color:lightblue ;width:475Px">
                                                <input id="btn-input" type="text" class="form-control input-sm" placeholder="Comenta............." ng-model="come" comentar="comentar()">
                                                <button class="btn btn-warning btn-sm" ng-click="comentar()">
                                                    Publicar
                                                </button>
                                                <div ng-repeat="com in comentados">
                                                    <div ng-if="msg.text[0] == com.text[0]">
                                                        <br />
                                                        <div ng-if="com.text[2]!=null">
                                                            <div style="background-color:lightcyan; width:450px">
                                                                <img src="{{com.text[2]}}" width="30" height="30" />
                                                                <table>
                                                                    <tr>
                                                                        <td><font color="black"><strong>{{com.text[1]}}:</strong> </font></td>

                                                                        <td><font face="verdana" color="black">{{com.text[3]}} </font></td>
                                                                    </tr>
                                                                </table>
                                                                <br />
                                                                <br />
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>                                            
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.4.5/angular.min.js"></script>
</body>
</html>
